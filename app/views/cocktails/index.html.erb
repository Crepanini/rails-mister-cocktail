<!-- Card -->
<div class="container">
  <div class="add-button">
    <%= link_to "Add Cocktail",new_cocktail_path, :class => "btn, btn-outline-warning"%>
  </div>
  <class="nav-item active">
    <div class="row">
      <% @cocktails.each do |c| %>
        <div class="col-4">
          <div class="card-margin">
            <% if c.photo != nil %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=  cl_image_tag c.photo, width: 400, height: 500, crop: :fill %>);">
                <%= link_to c.name, cocktail_path(c) %>
              </div>
            <% elsif c.photo.nil? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_tag "https://images.unsplash.com/photo-1511690656952-34342bb7c2f2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1400&q=80"%>);">
                <%= link_to c.name, cocktail_path(c) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>