<!-- Navbar -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <%= image_tag "Logo.png", alt: "Cocktail", width: 300 %>
      </li>
    </ul>
  </div>
</div>
<!-- Card -->
